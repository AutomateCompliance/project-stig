{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "mofUrl":{
          "type": "string"
      },
      "identityId": {
        "type": "string"
      },
      "xccdffUrl": {
        "type": "string"
      },
      "galleryName": {
        "type": "string"
      }
    },
    "variables": {
      "scriptsUrl": "https://raw.githubusercontent.com/shawngib/project-stig/master/scripts/setPowerStig.ps1",
      "imageTemplateName": "Win2019_STIG"
    },
    "resources": [
      {
        "name": "[variables('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "2020-02-14",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          
        ],
        "tags": {
          "imagebuilderTemplate": "AzureImageBuilderSIG",
          "userIdentity": "enabled"
        },
        "identity": {
          "type": "UserAssigned",
          "userAssignedIdentities": {
            "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/',parameters('identityId'))]": {
              
            }
          }
        },
        "properties": {
          "buildTimeoutInMinutes": 100,
          "vmProfile": {
            "vmSize": "Standard_D1_v2",
            "osDiskSizeGB": 127
          },
          "source": {
            "type": "PlatformImage",
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2019-Datacenter",
            "version": "latest"
          },
          "customize": [
            {
              "type": "File",
              "name": "mofFileDownload",
              "sourceUri": "[parameters('mofUrl')]",
              "destination": "c:\\localhost.mof"
            },
            {
              "type": "File",
              "name": "xccdfDownload",
              "sourceUri": "[parameters('xccdffUrl')]",
              "destination": "c:\\U_MS_Windows_Server_2019_STIG_V1R5_Manual-xccdf.xml"
            },
            {
              "type": "PowerShell",
              "name": "CreateBuildPath",
              "runElevated": true,
              "scriptUri": "[variables('scriptsUrl')]"
            },            
            {
              "type": "WindowsUpdate",
              "searchCriteria": "IsInstalled=0",
              "filters": [
                "exclude:$_.Title -like '*Preview*'",
                "include:$true"
              ],
              "updateLimit": 40
            }
          ],
          "distribute": [
            {
              "type": "SharedImage",
              "galleryImageId": "[concat(resourceGroup().id,'/providers/Microsoft.Compute/galleries/',parameters('galleryName'),'/images/Win2019_STIG')]",
              "runOutputName": "Win2019_STIG",
              "artifactTags": {
                "source": "azureVmImageBuilder",
                "baseosimg": "WindowsServer"
              },
              "replicationRegions": [
                "eastus",
                "eastus2",
                "southcentralus"
              ]
            },
            {
              "type": "VHD",
              "runOutputName": "Win2019_STIG_VHD"
            }
          ]
        }
      }
    ]
  }